Insertreg.jsp:-
<%@pageimport="java.sql.*"%>

<%
String fname = request.getParameter("fname");
//String lname = request.getParameter("lname");
String gender = request.getParameter("gender");
String uname = request.getParameter("uname");
String pwd = request.getParameter("pwd");
String mobile = request.getParameter("mobile");
String email = request.getParameter("email");
String address = request.getParameter("address");
//int id = (int)(Math.random() * 99999 + 1);

try
{
	Class.forName("oracle.jdbc.driver.OracleDriver");
	System.out.println("Driver Classes Loaded");  
	 Connection con = null;
	 con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1522:xe", "ep", "ep");  
	System.out.println("Connection Established");
PreparedStatementpstmt = con.prepareStatement("select * from member where uname=? or pwd=?");
	pstmt.setString(1, uname);
	pstmt.setString(2, email);
	ResultSetrs = pstmt.executeQuery();
	if(rs.next())
	 {
		%>
			<h3>password / Username </h3><br>
	<ahref="reg.html">Try Again</a>
			<%
	 }
	else
	 {
		PreparedStatement pstmt1 = con.prepareStatement("insert into member values(?,?,?,?,?,?,?)");
		
		//pstmt1.setInt(1, id);
		 pstmt1.setString(1, fname);
		//pstmt1.setString(2, lname);
		 pstmt1.setString(2, gender);
		 pstmt1.setString(3, uname);
		 pstmt1.setString(4, pwd);
		 pstmt1.setString(5, mobile);
		 pstmt1.setString(6, email);
		 pstmt1.setString(7, address);
		
		inti = pstmt1.executeUpdate();
		
		if(i>0)
		 {
			%>
			<h3>Member Registration Successful</h3><br>
	<ahref="login.html">Go to memberLogin</a>
			<%
		 }
		else
		 {
				%>
				<h3>Member Registration UnSuccessful</h3><br>
		<ahref="reg.html">Try to Register Again</a>
				<%
		 }	
	 }	
}
catch(Exception e)
{
	out.println(e);
}

%>
