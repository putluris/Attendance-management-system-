<script>
function validatefname()
{
var a =  document.getElementById("fname").value;
if(a.length==0)
{
document.getElementById("err1").innerHTML = "Please Enter firstname";
document.getElementById("err1").style.color = "red";

document.getElementById("err1").focus();
}
else

{
document.getElementById("err1").innerHTML="";
}
}

function validatelname()
{
var a =  document.getElementById("lname").value;
if(a.length==0)
{
document.getElementById("err2").innerHTML = "Please Enter lastname";
document.getElementById("err2").style.color = "red";

document.getElementById("err2").focus();
}
else

{
document.getElementById("err2").innerHTML="";
}
}
function validateregno()
{
var a =  document.getElementById("regno").value;
if(a.length==0 &&a.length<=9)
{
document.getElementById("err3").innerHTML = "Please Enter valid id number";
document.getElementById("err3").style.color = "red";

document.getElementById("err3").focus();
}
else

{
document.getElementById("err3").innerHTML="";
}
}
function validatepwd()
{
var b =  document.getElementById("pwd").value;
if(b.length==0)
{
document.getElementById("err4").innerHTML = "Please Enter password";
document.getElementById("err4").style.color = "red";

document.getElementById("err4").focus();
}
else

{
document.getElementById("err4").innerHTML="";
}
}

function validatecpwd()
{
var b =  document.getElementById("pwd").value;
var c =  document.getElementById("cpwd").value;
if(b!=c)
{
document.getElementById("err5").innerHTML = "Please Enter correct password";
document.getElementById("err5").style.color = "red";

document.getElementById("err5").focus();
}
else

{
document.getElementById("err5").innerHTML="";
}
}
function validatemob()
{
var d =  document.getElementById("mob").value;
if(d.length==0)
{
document.getElementById("err6").innerHTML = "Please Enter valid password";
document.getElementById("err6").style.color = "red";

document.getElementById("err6").focus();
}
if(isNaN(d))
{
document.getElementById("err6").innerHTML = "Mobile no must be a number!!!";
document.getElementById("err6").style.color = "red";

document.getElementById("err6").focus();
}
if(d.length!=10)
{
document.getElementById("err6").innerHTML = "Mobile no contains 10 digits only!!!";
document.getElementById("err6").style.color = "red";

document.getElementById("err6").focus();
}
else

{
document.getElementById("err6").innerHTML="";
}
}
</script>

</head>
