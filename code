 PreparedStatement pstmt = con.prepareStatement("select * from member where uname=? and pwd=?");
 pstmt.setString(1,uname);
 pstmt.setString(2,pwd);
 ResultSet rs = pstmt.executeQuery();
 if(rs.next())
