<%@ page import="java.sql.*" %>
<%

String uname = request.getParameter("uname");
String pwd = request.getParameter("pwd");

try
{
Class.forName("oracle.jdbc.driver.OracleDriver");
System.out.println("Driver Classes Loaded");  
Connection con = null;
con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1522:xe", "ep", "ep");  
System.out.println("Connection Established");
 
 PreparedStatement pstmt = con.prepareStatement("select * from leader where uname=? and pwd=?");
 pstmt.setString(1,uname);
 pstmt.setString(2,pwd);
 ResultSet rs = pstmt.executeQuery();
 if(rs.next())
 {
 %>
<h3>Login successful</h3><br>
<a href="index.html">Home</a>
<%
 }
 else
 {
 %>
<h3>Login Failed</h3><br>
<a href="login.html">Try Again</a>
<%
 }
}
catch(Exception e)
{
out.println(e);
}
%>
